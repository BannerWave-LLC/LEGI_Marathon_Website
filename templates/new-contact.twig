{% extends "_layouts/default.twig" %}

{% block bodyTag %}
  {{ parent()|attr({
    class: 'bg-gray-200'
  }) }}
{% endblock %}

{% block content %}
  {% include "_partials/header-landing.twig" %}

  <div class="pb-18p lg:bg-white lg:pb-84p">
    <div class="container">
      <div class="relative">
        <form action="?" class="bg-green-2 py-10 px-5 -mx-5 lg:mx-0 lg:p-10 lg:absolute lg:left-[36%] xl:left-[34%] lg:-top-[1%] lg:-translate-y-1/2 z-1 lg:max-w-[799px]">
          <h4 class="mb-11p lg:mb-6">Connect with us.</h4>

          <div class="mb-3.5 lg:mb-8">
            <div class="grid lg:grid-cols-2 gap-2.5 mb-2.5 lg:mb-25p lg:gap-[30px]"> 
              <div class="group">
                  <label for="first-name" class="inline-block text-sm font-normal leading-1.43 tracking-0.525p text-granite-gray mb-7p">First Name*</label>

                  <input class="w-full bg-transparent border-1 border-dark-green-2 min-h-[40px] rounded focus:outline-none group-[.has-error]:border-dark-yellow hover:outline-none focus:border-green hover:border-green px-2.5 transition duration-100" type="text" placeholder="First Name" id="first-name" name="first-name" required>
              </div>

              <div class="group">
                  <label for="last-name" class="inline-block text-sm font-normal leading-1.43 tracking-0.525p text-granite-gray mb-7p">Last Name</label>

                  <input class="w-full bg-transparent border-1 border-dark-green-2 min-h-[40px] rounded focus:outline-none group-[.has-error]:border-dark-yellow hover:outline-none focus:border-green hover:border-green px-2.5 transition duration-100" type="text" placeholder="Last Name" id="last-name" name="last-name" required >
              </div>
            </div>

            <div class="grid lg:grid-cols-2 gap-2.5 mb-2.5 lg:mb-25p lg:gap-[30px]"> 
              <div class="group">
                  <label for="email" class="inline-block text-sm font-normal leading-1.43 tracking-0.525p text-granite-gray mb-7p">Email Address*</label>

                  <input class="w-full bg-transparent border-1 border-dark-green-2 min-h-[40px] rounded focus:outline-none group-[.has-error]:border-dark-yellow hover:outline-none focus:border-green hover:border-green px-2.5 transition duration-100" type="email" placeholder="Email" id="email" name="email" required>
              </div>

              <div class="group">
                  <label for="work-phone-number" class="inline-block text-sm font-normal leading-1.43 tracking-0.525p text-granite-gray mb-7p">Work Phone Number</label>

                  <input class="w-full bg-transparent border-1 border-dark-green-2 min-h-[40px] rounded focus:outline-none group-[.has-error]:border-dark-yellow hover:outline-none focus:border-green hover:border-green px-2.5 transition duration-100" type="text" placeholder="Phone number" id="work-phone-number" name="work-phone-number">
              </div>
            </div>

            <div class="grid lg:grid-cols-2 gap-2.5 mb-2.5 lg:mb-25p lg:gap-[30px]"> 
              <div class="group">
                  <label for="company" class="inline-block text-sm font-normal leading-1.43 tracking-0.525p text-granite-gray mb-7p">Company</label>

                  <input class="w-full bg-transparent border-1 border-dark-green-2 min-h-[40px] rounded focus:outline-none group-[.has-error]:border-dark-yellow hover:outline-none focus:border-green hover:border-green px-2.5 transition duration-100" type="text" placeholder="Company" id="company" name="company">
              </div>

              <div class="group">
                  <label for="Title" class="inline-block text-sm font-normal leading-1.43 tracking-0.525p text-granite-gray mb-7p">Title</label>

                  <input class="w-full bg-transparent border-1 border-dark-green-2 min-h-[40px] rounded focus:outline-none group-[.has-error]:border-dark-yellow hover:outline-none focus:border-green hover:border-green px-2.5 transition duration-100" type="text" placeholder="Title" id="Title" name="Title" required >
              </div>
            </div>

            <div class="grid lg:grid-cols-2 gap-2.5 mb-2.5 lg:mb-25p lg:gap-[30px]"> 
              <div class="group">
                <label for="source" class="inline-block text-sm font-normal leading-1.43 tracking-0.525p text-granite-gray mb-7p">Source</label>

                <div class="relative">
                  <select name="source" id="source" class="w-full bg-transparent border-1 border-dark-green-2 min-h-[40px] rounded focus:outline-none group-[.has-error]:border-dark-yellow hover:outline-none focus:border-green hover:border-green px-2.5 transition duration-100 appearance-none">
                    <option label=" " value="">Select one...</option>
                    <option value="1">source 1</option>

                    <option value="2">source 2</option>

                    <option value="3">source 3</option>

                    <option value="4">source 4</option>
                  </select>

                  <span class="block absolute top-1/2 right-2.5 text-gray -translate-y-1/2 pointer-events-none">
                    <svg width="11" height="9" viewBox="0 0 11 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5.50585 9L0.314764 0H10.6969L5.50585 9Z" fill="#39B077"/>
                    </svg>
                  </span>
                </div>
              </div>

              <div class="group">
                <label for="inquiry-type" class="inline-block text-sm font-normal leading-1.43 tracking-0.525p text-granite-gray mb-7p">Inquiry Type</label>

                <div class="relative">
                  <select name="inquiry-type" id="inquiry-type" class="w-full bg-transparent border-1 border-dark-green-2 min-h-[40px] rounded focus:outline-none group-[.has-error]:border-dark-yellow hover:outline-none focus:border-green hover:border-green px-2.5 transition duration-100 appearance-none">
                    <option label=" " value="">Select one...</option>
                    <option value="1">inquiry-type 1</option>

                    <option value="2">inquiry-type 2</option>

                    <option value="3">inquiry-type 3</option>

                    <option value="4">inquiry-type 4</option>
                  </select>

                  <span class="block absolute top-1/2 right-2.5 text-gray -translate-y-1/2 pointer-events-none">
                    <svg width="11" height="9" viewBox="0 0 11 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5.50585 9L0.314764 0H10.6969L5.50585 9Z" fill="#39B077"/>
                    </svg>
                  </span>
                </div>
              </div>
            </div>

            <div>
              <div class="group lg:max-w-[526px]">
                  <label for="message" class="inline-block text-sm font-normal leading-1.43 tracking-0.525p text-granite-gray mb-7p">Message</label>

                  <textarea name="message" id="message" cols="30" rows="10" class="block w-full bg-transparent border-1 border-dark-green-2 min-h-[40px] rounded focus:outline-none group-[.has-error]:border-dark-yellow hover:outline-none focus:border-green hover:border-green px-2.5 transition duration-100 h-[145px] resize-none"></textarea>
              </div>
            </div>
          </div>

          <div class="flex gap-5 items-center">
            <button type="submit" class="relative inline-flex uppercase before:bg-green before:absolute before:bottom-0 before:left-0 before:h-[2px] before:w-full py-2.5 px-30p bg-white overflow-hidden after:absolute after:bg-green after:top-0 after:left-0 after:right-[-2px] after:h-full after:-z-1 after:translate-y-full hover:after:translate-y-0 after:transition after:duration-100 isolate hover:text-white text-green text-sm tracking-1.655p font-bold leading-1.64 transition duration-100 shadow-shadow-button">Submit</button>

            <a href="#" class="font-bold text-sm leading-1.64 tracking-1.655p text-gray-5 hover:text-black transition-colors duration-100">CLEAR FORM</a>
          </div>
        </form>

        <div class="pt-30p pb-5 lg:pt-[136px] lg:pb-9">
          <figure class="w-full max-w-[649px] aspect-[353/185] lg:aspect-[649/340]">
            <img src="/dist/svg/map-image-1.svg" alt="map" class="w-full h-full object-contain">
          </figure>
        </div>

        <div>
          <h4 class="mb-4 lg:mb-9">Locations</h4>

          <div class="grid gap-[18px] md:grid-cols-2 lg:grid-cols-4 lg:gap-[30px]">
            <div class="md:col-span-2 lg:col-span-1 lg:row-span-2">
              <strong class="font-bold tracking-1.655p text-sm uppercase inline-block mb-2">CHICAGO / HEADQUARTERS</strong>

              <address class="not-italic">
                200 West Madison Street<br>
                Suite 3700<br>
                Chicago, IL 60606<br>
                Phone: +1-312-989-1350<br>
                Fax: +1 312-989-1385
              </address>
            </div>

            <div>
              <strong class="font-bold tracking-1.655p text-sm uppercase inline-block mb-2">San Francisco</strong>

              <address class="not-italic">
                Two Embarcadero Center, Suite 460<br>
                San Francisco, CA 94111
              </address>
            </div>

            <div>
              <strong class="font-bold tracking-1.655p text-sm uppercase inline-block mb-2">San Diego</strong>

              <address class="not-italic">
                1953 San Elijo Ave, Suite 203<br>
                Cardiff, CA 92007
              </address>
            </div>

            <div>
              <strong class="font-bold tracking-1.655p text-sm uppercase inline-block mb-2">NEW YORK CITY</strong>

              <address class="not-italic">
                280 Park , FL 26E<br>
                New York, New York 10017
              </address>
            </div>

            <div>
              <strong class="font-bold tracking-1.655p text-sm uppercase inline-block mb-2">HOUSTON</strong>

              <address class="not-italic">
                609 Main Street, Suite 2323<br>
                Houston, TX 77002
              </address>
            </div>

            <div>
              <strong class="font-bold tracking-1.655p text-sm uppercase inline-block mb-2">London</strong>

              <address class="not-italic">
                25 Upper Brook Street, Ground Floor<br>
                London, England W1K 7QD
              </address>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-9 pb-60p lg:pt-60p lg:pb-16">
    <div class="container">
      <div class="lg:flex lg:gap-5 border-t-1 border-t-gray-3 relative before:absolute before:top-0 before:left-0 before:w-[129px] before:h-[1px] before:bg-dark-charcoal pt-17p lg:pt-7">
        <div class="w-full lg:max-w-[331px]">
          <strong class="font-bold tracking-1.655p text-sm uppercase inline-block mb-5">RELATED STORIES</strong>
        </div>

        <div class="flex-1">
          <div class="w-full lg:max-w-[914px] lg:ml-auto grid gap-[14px] lg:gap-[21px] lg:grid-cols-2 lg:pt-4">
            {% for i in 1..2 %}
              {% include "_partials/tile-news-large.twig" %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>

  {% include "_partials/nav-footer.twig" %}
{% endblock %}
