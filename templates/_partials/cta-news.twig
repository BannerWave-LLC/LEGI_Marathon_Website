            {% for i in 1..4 %}
                {% include "_partials/tile-news-small.twig" %}
            {% endfor %}
        </div>
    </div>

    <div class="flex items-center lg:justify-center">
        <a href="#" class="relative inline-flex uppercase before:bg-green before:absolute before:bottom-0 before:left-0 before:h-[2px] before:w-full py-2.5 px-30p bg-white overflow-hidden after:absolute after:bg-green after:top-0 after:left-0 after:right-[-2px] after:h-full after:-z-1 after:translate-y-full hover:after:translate-y-0 after:transition after:duration-100 isolate hover:text-white text-green text-sm tracking-1.655p font-bold leading-1.64 transition duration-100 shadow-shadow-button">Read More Stories</a>
    </div>
</div>
